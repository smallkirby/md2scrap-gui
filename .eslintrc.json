{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google",
        "plugin:@next/next/recommended"
    ],
    "overrides": [
    ],
	"parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "ignorePatterns": [
        "node_modules/*",
        "next.config.js",
        "postcss.config.js",
        "tailwind.config.js",
        "dist/*",
        "next-env.d.ts"
    ],
    "rules": {
        "indent": ["error", 2],
        "max-len": ["error", {"code": 120}],
        "require-jsdoc": "off",
        "valid-jsdoc": "off"
    }
}
